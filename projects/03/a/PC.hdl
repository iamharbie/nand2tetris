/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
    Inc16(in=feedback, out=outInc); // Inc prev out
    Mux16(a=feedback, b=outInc, sel=inc, out=feedbackOrInc); // counter
    Mux16(a=feedbackOrInc, b=in, sel=load, out=FeedIncOrLoad); // load input
    Mux16(a=FeedIncOrLoad, b=false, sel=reset, out=processedOut);// Reset or not


    Register(in=processedOut, load=true, out=out, out = feedback);

}
